

import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.WindowConstants;

public class Ebana {
		
	public static void main(String[] args) {

		JFrame myFrame = new JFrame("Я_окно_гребаный_стыд!!!");
		myFrame.setSize(300, 100);
		myFrame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
		myFrame.setLayout(new GridLayout(3,2));
		JLabel l = new JLabel();
		l.setText("Введите имя");
		l.setSize(50, 10);
		myFrame.add( l );		
		JTextField txt1 = new JTextField("Тут имя");
		txt1.setSize(50, 20);
		myFrame.add(txt1);
		JLabel n = new JLabel();
		n.setText("Введите фамилию");		
		myFrame.add( n );
		JTextField txt2 = new JTextField("Тут фамилия");
		myFrame.add(txt2);
		JButton but = new JButton("Добавить");
		myFrame.add(but);
		myFrame.setVisible(true);

	}

}