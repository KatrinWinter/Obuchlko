

import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.ArrayList;
import java.util.List;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.WindowConstants;

public class Ebana {
		
	public static void main(String[] args) {
		
        List <Human> humans = new ArrayList <Human> ();
        List <Worker> workers = new ArrayList <Worker> ();

        
        for (int i=0; i<=49; i++){
        humans.add(new Human(1, "Name"+i+1, "Surname"+i+1));
        }
        
        for (int i=0; i<=49; i++){
            workers.add(new Worker(1, "Name"+51+i, "Surname"+51+i));    
        }

        int sum = humans.size()+workers.size();
        final List <Human> newHumans = new ArrayList <Human> (sum);
                
        for (int i=0; i<sum; i++){
            if (i<humans.size()) {
                newHumans.add(humans.get(i));    
            }
            else {
                newHumans.add((Human)workers.get(i-humans.size()));        
            }
        }
         for (Human h : newHumans){
             h.setName("Тимофей");
             h.setSurname("Великий");
             System.out.println(h.getSexAsString() + h.getName() + h.getSurname());
         }
    

        JFrame myFrame = new JFrame("Я_окно_гребаный_стыд!!!");
		myFrame.setSize(300, 100);
		myFrame.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);
		myFrame.setLayout(new GridLayout(3,2));
		JLabel l = new JLabel();
		l.setText("Введите имя");
		myFrame.add( l );		
		
		final JTextField txt1 = new JTextField("Тут имя");
		myFrame.add(txt1);
		
		JLabel n = new JLabel();
		n.setText("Введите фамилию");		
		myFrame.add( n );
		final JTextField txt2 = new JTextField("Тут фамилия");
		myFrame.add(txt2);
		
		JButton but = new JButton("Добавить");
		myFrame.add(but);
		myFrame.setVisible(true);
		
		but.addActionListener(new ActionListener() {
			   @Override
			   public void actionPerformed(ActionEvent e) {
				   Human h = new Human(txt1.getText(), txt2.getText());
				   System.out.println(h.getSexAsString() + h.getName() + h.getSurname());
				   newHumans.add(h);
			//тут код
			}
			});
        for (Human h : newHumans){
              System.out.println(h.getSexAsString() + h.getName() + h.getSurname());
        }

	}

}